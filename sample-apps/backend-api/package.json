{
  "name": "backend-api",
  "version": "1.0.0",
  "description": "Backend API for DevOps Security Research Project",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
